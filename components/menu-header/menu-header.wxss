/* components/menu-header/menu-header.wxss */
.content {
  position: relative;
  height: 450rpx;
  color: #fff;
}

.content .bg-image {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.content .bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}

.content .album {
  display: flex;
  align-items: center;
  width: 670rpx;
  margin: 0 auto;
  padding: 40rpx 0;
}

.content .album .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 18rpx;
}

.content .album .right {
  /* box-sizing: border-box; */
  margin-left: 40rpx;
}

.content .album .name {
  font-size: 36rpx;

  /* 显示两行 */
  white-space: normal;
  overflow: hidden; 
  text-overflow: ellipsis;
  display: -webkit-box; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}

.content .right .user {
  display: flex;
  align-items: center;
  margin: 14rpx 0;
}

.content .user .avatar {
  width: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content .user .nickname {
  font-size: 28rpx;
}

.content .desc {
  width: 400rpx;

  font-size: 24rpx;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 660rpx;
  margin: 20rpx auto;
}

.bottom .item {
  display: flex;
  align-items: center;
}

.bottom .item .icon {
  width: 50rpx;
  margin-right: 14rpx;
}

.bottom .item .text {
  font-size: 28rpx;
}