/* components/ranking-item/ranking-item.wxss */
.ranking {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background-color: #f0f0f0;
}

.content {
  flex: 1;
  padding: 24rpx;
}

.content .name {
  color: #333;
  margin-bottom: 14rpx;
}

.content .item {
  color: #777;
  font-size: 24rpx;
}

.ranking .album {
  position: relative;
  width: 220rpx;
  height: 220rpx;
  background-size: cover;
}

.ranking .album .image {
  width: 100%;
}

.ranking .album .count {
  position: absolute;
  bottom: 2rpx;
  right: 3rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  color: #fff;
  font-size: 24rpx;
  background: rgba(0, 0, 0, .4);
}