/* pages/main_profile/main_profile.wxss */
page {
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #f3f3f3;
}

.section {
  padding: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
}

/* 头像和名称 */
.userinfo {
  display: flex;
  align-items: center;
}

.userinfo .avator {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.userinfo .nickname {
  margin-left: 20rpx;
  font-size: 30rpx;
}

/* tabs */
.tabs {
  display: flex;
  justify-content: space-around;
  margin: 40rpx 0;
}

.tabs .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tabs .item .icon {
  width: 80rpx;
  height: 80rpx;
}

.tabs .item .name {
  margin-top: 20rpx;
  font-size: 24rpx;
}

/* 歌单 */
.mine-menu .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗 */
.dialog .input {
  height: 60rpx;
  padding: 8rpx 16rpx;
  margin: 30rpx;
  border-radius: 20rpx;
  border: 1px solid #ccc;
  line-height: 80rpx;
  font-size: 28rpx;
}